@model Core.Model.Inscricao

@{
    ViewBag.Title = "1º Semana Acadêmica da Biologia no CEDERJ de Duque de Caxias - Excluir inscrição";
}
<link href="@Url.Content("~/Content/jQueryUI/jquery-ui-1.8.18.custom.css")" rel="stylesheet" type="text/css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="http://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.18/jquery-ui.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#signIn").click(function () {
            var excluir = window.confirm("Tem certeza que deseja excluir a inscrição?");
            if (excluir) {
                return true;
            } else {
                return false;
            }
        });
    });
</script>
<h3>Apagar inscrição?</h3>
<table class="inscrição" style="float: left;">
    <tr>
        <td style="text-align: center;">
            @Html.LabelFor(model => model.tipoInsccricao)
        </td>
        <td>
            @Html.DisplayFor(model => model.tipoInsccricao)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.nome)
        </td>
        <td>
            @Html.DisplayFor(model => model.nome)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.instituicao)
        </td>
        <td>
            @Html.DisplayFor(model => model.instituicao)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.email)
        </td>
        <td>
            @Html.DisplayFor(model => model.email)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.telefone)
        </td>
        <td>
            @Html.DisplayFor(model => model.telefone)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(model => model.curso)
        </td>
        <td>
            @Html.DisplayFor(model => model.curso)
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("Voltar para Lista", "Listar")
        </td>
    </tr>
</table>

@using (Html.BeginForm()) {
    <p>
        <input id="signIn" type="submit" value="Deletar" title="Deletar" style="margin: 20px 470px 0 0;" />
    </p>
}


