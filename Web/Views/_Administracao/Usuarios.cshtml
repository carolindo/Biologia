@model IEnumerable<Core.Model.RegisterModel>

@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            UserName
        </th>
        <th>
            Email
        </th>
        <th>
            Password
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @item.UserName
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @if (item.UserName == Context.User.Identity.Name)
            {
                <text>item.Password;</text>
            }
            else
            {
                <text>******</text>
            }
        </td>
    </tr>
}

</table>

