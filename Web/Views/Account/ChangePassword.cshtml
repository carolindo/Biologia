@model Core.Model.ChangePasswordModel

@{
    ViewBag.Title = "1º Semana Acadêmica da Biologia no CEDERJ de Duque de Caxias - Troca de senha";
}

<h2>Trocar Senha</h2>
<p>
    Use o formulário abaixo para trocar sua senha 
</p>
<p>
    A nova senha deve ter no mínimo @ViewBag.PasswordLength caracteres.
</p><br />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")

    <table class="inscrição" style="float: left; width: 650px;">
        <tr>
            <td style="width: 100px;">
                @Html.LabelFor(m => m.OldPassword)
            </td>
            <td>
                @Html.PasswordFor(m => m.OldPassword)
            </td>
        </tr>
        <tr>
            <td style="width: 100px;">
                @Html.LabelFor(m => m.NewPassword)
            </td>
            <td>
                @Html.PasswordFor(m => m.NewPassword)
            </td>
        </tr>
        <tr>
            <td style="width: 100px;">
                @Html.LabelFor(m => m.ConfirmPassword)
            </td>
            <td>
                @Html.PasswordFor(m => m.ConfirmPassword)
            </td>
        </tr>
    </table>

    <p>
        <input id="signIn" type="submit" value="Trocar Senha" title="Trocar Senha" style="margin: 20px 470px 0 0;" />
    </p>
}
